<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#FF6E40"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgOregano"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgAlbaca"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imgPalta"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgTomateCherry"
                app:layout_constraintTop_toBottomOf="@+id/ingredientesGenerales"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imgTomateCherry"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgTomate"
                app:layout_constraintTop_toBottomOf="@+id/ingredientesGenerales"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imgTomate"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgMorron"
                app:layout_constraintTop_toBottomOf="@+id/ingredientesGenerales"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imgMorron"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgChampinion"
                app:layout_constraintTop_toBottomOf="@+id/ingredientesGenerales"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imgChampinion"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgCebolla"
                app:layout_constraintTop_toBottomOf="@+id/ingredientesGenerales"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="237dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/chef" />

            <TextView
                android:id="@+id/nombreReceta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ringm"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ingredientePrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ringm"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/nombreReceta" />

            <TextView
                android:id="@+id/basePizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/ringm"
                android:text="TextView"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/ingredientePrincipal" />

            <TextView
                android:id="@+id/ingredientesGenerales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/ringm"
                android:text="@string/txt_ingredientes_generales_cardview"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/basePizza" />

            <ImageView
                android:id="@+id/imgCebolla"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/ingredientesGenerales"
                app:srcCompat="@drawable/no_ingrediente" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/ringm"
                android:text="@string/txt_alinios_cardview"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imgChampinion" />

            <ImageView
                android:id="@+id/imgAjo"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/no_ingrediente" />

            <ImageView
                android:id="@+id/imgAlbaca"
                android:layout_width="43dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/imgAjo"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/no_ingrediente" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:textColor="#63FF03"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imgAjo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>